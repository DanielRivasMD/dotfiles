####################################################################################################

_default:
  @just --choose

####################################################################################################

@abort:

####################################################################################################

# print justfile
[group('just')]
@show:
  bat .justfile --language make

####################################################################################################

# edit justfile
[group('just')]
@edit:
  micro .justfile

####################################################################################################

# compile roadmap action items
[group('dev')]
@todor:
  sed -i '' '/^==================================================$/,/^==================================================$/d' ROADMAP.txt
  { printf '==================================================\n'; todor -s; printf '==================================================\n'; } >> ROADMAP.txt

####################################################################################################

# TODO: change to bash for compatibility, however this does not produce colored logging
# link in-situ
[group('link')]
@in-situ:
  source .just/in-situ.sh

####################################################################################################

# link ex-situ
[group('link')]
@ex-situ:
  source .just/ex-situ.sh

####################################################################################################
