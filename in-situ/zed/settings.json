// Zed settings
{
  "theme": "One Dark",
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_size": 18,
  "ui_font_family": "Monaco",
  "ui_font_size": 18,
  "preferred_line_length": 100,
  "tab_size": 2,
  "show_whitespaces": "all",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "tabs": {
    "git_status": true
  },
  "languages": {
    "Rust": { "format_on_save": "on" },
    "SQL": { "format_on_save": "off" },
    "TOML": { "format_on_save": "off" }
  }
}
