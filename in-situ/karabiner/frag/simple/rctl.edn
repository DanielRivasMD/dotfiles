; control
{:des "Control Mode - symbols"
 :rules
 [;
  [:!W#Phyphen [:spacebar :hyphen :equal_sign :spacebar]]                      ; ' -= '            ;
  [:!W#Pequal_sign [:spacebar :!Sequal_sign :equal_sign :spacebar]]            ; ' += '            ;
  ; [:!W#Popen_bracket []]                                                                         ;
  ; [:!W#Pclose_bracket []]                                                                        ;
  [:!W#Psemicolon [:!S4 :!S9]]                                                 ; '$('              ;
  [:!W#Pquote [:!S3 :open_bracket]]                                            ; '#['              ;
  [:!W#Pbackslash [:!S4 :!Sopen_bracket]]                                      ; '${'              ;
  [:!W#Pcomma [:comma :spacebar]]                                              ; ', '              ;
  [:!W#Pperiod [:semicolon :spacebar]]                                         ; '; '              ;
  [:!W#Pslash [:slash :slash :slash :spacebar]]                                ; '/// '            ;

  ; [:!W#Pdelete_or_backspace []]                                                                  ;
  [:!W#Preturn_or_enter [:spacebar :hyphen]]                                   ; ' -'              ;
  [:!W#Pright_shift [:period :period]]                                         ; '..'              ;
  [:!W#Pright_option [:spacebar :!S8 :equal_sign :spacebar]]                   ; ' *= '            ;
  [:!W#Pright_command [:spacebar :slash :equal_sign :spacebar]]                ; ' /= '            ;
  ; [:!W#Pspacebar []]                                                                             ;

  ; [:!W#Pleft_command []]                                                          UNMAPPED       ;
  ; [:!W#Pleft_option []]                                                           UNMAPPED       ;
  ; [:!W#Pleft_control []]                                                          UNMAPPED       ;
  ; [:!W#Pleft_shift []]                                                            UNMAPPED       ;
  ; [:!W#Pcaps_lock []]                                                             UNMAPPED       ;
  ; [:!W#Ptab []]                                                                   UNMAPPED       ;
  ; [:!W#Pnon_us_backslash []]                                                      UNMAPPED       ;
  ; [:!W#Pescape []]                                                                UNMAPPED       ;
  ]}

