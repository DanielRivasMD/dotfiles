; control
{:des "Control Mode - symbols"
 :rules
 [;
  [:!WS#Phyphen [:spacebar :period :hyphen :equal_sign :spacebar]]             ; ' .-= '           ;
  [:!WS#Pequal_sign [:spacebar :period :!Sequal_sign :equal_sign :spacebar]]   ; ' .+= '           ;
  ; [:!WS#Popen_bracket []]                                                                        ;
  ; [:!WS#Pclose_bracket []]                                                                       ;
  [:!WS#Psemicolon [:period :!S9]]                                             ; '.('              ;
  ; [:!WS#Psemicolon []]                                                                           ;
  ; [:!WS#Pquote []]                                                                               ;
  ; [:!WS#Pbackslash []]                                                                           ;
  [:!WS#Pcomma [:period :spacebar]]                                            ; '. '              ;
  [:!WS#Pperiod [:!Ssemicolon :spacebar]]                                      ; ': '              ;
  [:!WS#Pslash [:slash :slash :!S1 :spacebar]]                                 ; '//! '            ;

  ; [:!WS#Pdelete_or_backspace []]                                                                 ;
  [:!WS#Preturn_or_enter [:spacebar :hyphen :hyphen]]                          ; ' --'             ;
  [:!WS#Pright_shift [:period :period :period]]                                ; '...'             ;
  [:!WS#Pright_option [:spacebar :period :!S8 :equal_sign :spacebar]]          ; ' .*= '           ;
  [:!WS#Pright_command [:spacebar :period :slash :equal_sign :spacebar]]       ; ' ./= '           ;
  ; [:!WS#Pspacebar []]                                                                            ;

  ; [:!WS#Pleft_command []]                                                         UNMAPPED       ;
  ; [:!WS#Pleft_option []]                                                          UNMAPPED       ;
  ; [:!WS#Pleft_control []]                                                         UNMAPPED       ;
  ; [:!WS#Pleft_shift []]                                                           NOT AVAILABLE  ;
  ; [:!WS#Pcaps_lock []]                                                            UNMAPPED       ;
  ; [:!WS#Ptab []]                                                                  UNMAPPED       ;
  ; [:!WS#Pnon_us_backslash []]                                                     UNMAPPED       ;
  ; [:!WS#Pescape []]                                                               UNMAPPED       ;
  ]}

