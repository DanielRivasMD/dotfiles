; browser
{:des "Browser vimium mappings"
 :rules [;
         [:right_shift :right_shift :browser {:alone [:!Of1]}]            ; shift    ; focus       ;

         [:!WQRright_command :!Tf1 [:browser]]                            ; t-cmd    ; down link   ;
         [:!WQRright_option :!Cf1 [:browser]]                             ; t-alt    ; copy link   ;

         [:!WQRreturn_or_enter :!OTCf1 [:browser]]                        ; t-enter  ; current tab ;

         [:!WQRright_shift :!OTf1 [:browser]]                             ; t-shift  ; new tab     ;
         [:!WQRspacebar :!OCf1 [:browser]]                                ; t-space  ; new tab & go;
         [:!WQRdelete_or_backspace :!TCf1 [:browser]]                     ; t-bspace ; multitab    ;
         ]}

