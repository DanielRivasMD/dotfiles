         ; [:!TCtab []]                                                                            ;
         ; [:!TCnon_us_backslash []]                                                               ;
         ; [:!TCescape []]                                                                         ;

         [:!TCkeypad_plus :!Sf8]                           ; ctrl-cmd-+
         [:!TCkeypad_enter :!Sf9]                          ; ctrl-cmd-enter

