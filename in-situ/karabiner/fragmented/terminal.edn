         [:!TCkeypad_slash :!Of16]                         ; ctrl-cmd-/
         [:!TCkeypad_asterisk :!Of17]                      ; ctrl-cmd-*
         [:!TCkeypad_hyphen :!Of18]                        ; ctrl-cmd--

         ; helix symbols
         [:!TCkeypad_7 :!OTf13]                            ; ctrl-cmd-7
         [:!TCkeypad_8 :!OTf14]                            ; ctrl-cmd-8
         [:!TCkeypad_4 :!OTf15]                            ; ctrl-cmd-4
         [:!TCkeypad_5 :!OTf16]                            ; ctrl-cmd-5
         [:!TCkeypad_1 :!OTf17]                            ; ctrl-cmd-1
         [:!TCkeypad_2 :!OTf18]                            ; ctrl-cmd-2
         [:!TCkeypad_0 :!Sf7]                              ; ctrl-cmd-0

         ; alt down
         [:!Oup_arrow :!Sf1 [:term]]                       ; alt-up
         [:!Odown_arrow :!Sf2 [:term]]                     ; alt-down

         ; movement
