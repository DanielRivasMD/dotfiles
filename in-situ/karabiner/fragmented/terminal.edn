         [:!TCequal_sign :!OTf16]                          ; ctrl-cmd-=
         ; helix comments
         [:!TCopen_bracket :!Sf8]                          ; ctrl-cmd-[
         [:!TCclose_bracket :!Sf9]                         ; ctrl-cmd-]
         ; helix jump
         [:!TCsemicolon :!Of13 [:term]]                    ; ctrl-cmd-;
         [:!TCquote :!Of14 [:term]]                        ; ctrl-cmd-'
         [:!TCbackslash :!Of15 [:term]]                    ; ctrl-cmd-\
         ; helix diagnostics
         [:!TCcomma :!Of16]                                ; ctrl-cmd-,
         [:!TCperiod :!Of17]                               ; ctrl-cmd-.
         [:!TCslash :!Of18]                                ; ctrl-cmd-/

         ; broot create
         [:!TCreturn_or_enter :!Sf6 [:term]]               ; ctrl-cmd-enter
