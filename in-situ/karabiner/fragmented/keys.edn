; key modifiers
{:des "Modifier key remappings"
 :rules [; quit
         [:!C#Pq [:!Cq ["command-q" 0]] ["command-q" 1]]                                           ;
         [:!C#Pq ["command-q" 1] nil
          {:delayed {:invoked ["command-q" 0] :canceled ["commandq" 0]}}]                          ;

         ; caps & fn
         [:##caps_lock :!OTCleft_shift nil {:alone :escape}]                                       ;
         [:##fn :right_control nil {:alone :escape}]                                               ;

         ; modifiers
         [:escape :!EWright_shift nil {:alone [:!EWRf3]}]                                          ;
         [:tab :!WQright_shift nil {:alone [:tab]}]                                                ;
         [:left_control :left_control nil {:alone [:!Tf3]}]                                        ;
         [:left_option :left_option nil {:alone [:!Otab]}]                                         ;
         [:left_command :left_command nil {:alone [:!Ctab]}]                                       ;
         [:spacebar :!EWright_command nil {:alone [:spacebar]}]                                    ;
         [:right_command :right_command nil {:alone [:!Cf3]}]                                      ;
         [:right_option :right_option nil {:alone [:!Of3]}]                                        ;
         [:right_shift :right_shift nil {:alone [:!Sf3]}]                                          ;
         [:delete_or_backspace :!EQright_shift nil {:alone [:!EQRf3]}]                             ;

         ; delete
         [:!Sright_shift :delete_forward]                                                          ;
         [:!Rleft_shift :delete_or_backspace]                                                      ;
         ]}

