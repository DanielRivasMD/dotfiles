[include]
  path = .gitconfig.d/alias_one_letter
  path = .gitconfig.d/alias_two_letter
  path = .gitconfig.d/apply
  path = .gitconfig.d/branch
  path = .gitconfig.d/color
  path = .gitconfig.d/core
  path = .gitconfig.d/credentials
  path = .gitconfig.d/diff
  path = .gitconfig.d/functions
  path = .gitconfig.d/github
  path = .gitconfig.d/push
  path = .gitconfig.d/user

[core]
    pager = delta
	editor = micro

[interactive]
    diffFilter = delta --color-only

[delta]
    features = decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
