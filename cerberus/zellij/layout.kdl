layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
    }

    pane_template name="triple_pane" {
        pane split_direction="horizontal" {
            children
            pane
        }
    }

    tab name="Monitor" split_direction="horizontal" hide_floating_panes=true {
        floating_panes {
            pane name="Notes" command="joplin" {
                x "0%"
                y "3%"
                width "100%"
                height "97%"
            }
        }
        pane split_direction="vertical" {
            pane name="Clock" command="tock" size="35%" borderless=true
            pane name="Control" focus=true
        }
        pane split_direction="vertical" size="75%" {
            pane name="btm" command="btm" borderless=true
            pane name="ytop" command="ytop" borderless=true
        }
    }

    tab name="Files" focus=true {
        pane split_direction="vertical" {
            pane
            pane
            pane
        }
        pane name="Downloads" cwd="/Users/drivas/Downloads"
    }

    tab name="Archive" {
        triple_pane split_direction="vertical" {
            pane cwd="/Users/drivas/.archive"
            pane cwd="/Users/drivas/.archive"
        }
    }

    tab name="Factorem" {
        triple_pane split_direction="vertical" {
            pane cwd="/Users/drivas/Factorem"
            pane cwd="/Users/drivas/Factorem"
        }
    }

}

