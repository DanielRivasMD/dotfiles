; Alacritty
{:des "Terminal movement mappings"
 :rules [;
         ; helix reload & broot open
         [:!WQleft_option :!OTf6 [:term]]

         ; helix tab & broot viewer
         [:!WQspacebar :!OTf7 [:term]]                     ; ctrl-cmd-space
         [:!WQleft_arrow :!OTf8 [:term]]                   ; ctrl-cmd-left
         [:!WQright_arrow :!OTf9 [:term]]                  ; ctrl-cmd-right

         [:!TCspacebar :!OTf7 [:term]]                     ; ctrl-cmd-space
         [:!TCleft_arrow :!OTf8 [:term]]                   ; ctrl-cmd-left
         [:!TCright_arrow :!OTf9 [:term]]                  ; ctrl-cmd-right

         ; helix split
         [:!TCright_alt :!OTf10 [:term]]                   ; ctrl-cmd-alt
         [:!TCright_shift :!OTf11 [:term]]                 ; ctrl-cmd-shift
         [:!TCright_command :!OTf12 [:term]]               ; cmd-cmd-alt

         ; jump
         [:!TCsemicolon :!Of13 [:term]]                       ; cmd-,
         [:!TCquote :!Of14 [:term]]                      ; cmd-.
         [:!TCbackslash :!Of15 [:term]]                       ; cmd-/
         [:!TCreturn_or_enter :!Of16 [:term]]                 ; cmd-shift

         ; ; jump
         [:!TCkeypad_9 :!Of13 [:term]]                       ; cmd-,
         [:!TCkeypad_6 :!Of14 [:term]]                      ; cmd-.
         [:!TCkeypad_3 :!Of15 [:term]]                       ; cmd-/
         [:!TCkeypad_period :!Of16 [:term]]                 ; cmd-shift

         ; TODO: proably rebind to access from nushell
         ; diagnostics
         [:!TCcomma :!Of17]                                ; alt-cmd--
         [:!TCperiod :!Of18]                            ; alt-cmd-=
         [:!TCslash :!Of19]                   ; alt-cmd-backspace

         ; diagnostics
         [:!TCkeypad_slash :!Of17]                                ; alt-cmd--
         [:!TCkeypad_asterisk :!Of18]                            ; alt-cmd-=
         [:!TCkeypad_hyphen :!Of19]                   ; alt-cmd-backspace

         ; symbols
         [:!TCkeypad_7 :!OTf13]                         ; alt-cmd-[
         [:!TCkeypad_8 :!OTf14]                        ; alt-cmd-]
         [:!TCkeypad_4 :!OTf15]                            ; alt-cmd-;
         [:!TCkeypad_5 :!OTf16]                                ; alt-cmd-'
         [:!TCkeypad_1 :!OTf17]                               ; alt-cmd-,
         [:!TCkeypad_2 :!OTf18]                                ; alt-cmd-.
         [:!TCkeypad_0 :!OTf19]                      ; alt-cmd-enter

         ; symbols
         [:!TChyphen :!OTf15]                               ; alt-cmd-,
         [:!TCequal_sign :!OTf16]                                ; alt-cmd-.
         [:!TCdelete_or_backspace :!OTf19]                      ; alt-cmd-enter

         ; comments
         [:!TCopen_bracket :!Tf13]                         ; cmd-cmd
         [:!TCclose_bracket :!Tf16]                          ; cmd-alt

         ; comments
         [:!TCkeypad_plus :!Tf13]                         ; cmd-cmd
         [:!TCkeypad_enter :!Tf16]                          ; cmd-alt

         ; version control
         [:!OCup_arrow :!SOTf6 [:term]]                    ; alt-cmd-up
         [:!OCdown_arrow :!SOTf7 [:term]]                  ; alt-cmd-down

         ; movement
         [:!CSleft_arrow :!Oleft_arrow [:term]]            ; cmd-shift-left 
         [:!CSright_arrow :!Oright_arrow [:term]]          ; cmd-shift-right 
         [:!CSup_arrow :!SOTf8 [:term]]                    ; cmd-shift-up 
         [:!CSdown_arrow :!SOTf9 [:term]]                  ; cmd-shift-down

         ; broot toggle
         [:!Otab :!SOTf10 [:term]];

         ; alt down
         [:!Oup_arrow :!Sf1 [:term]];
         [:!Odown_arrow :!Sf2 [:term]];
