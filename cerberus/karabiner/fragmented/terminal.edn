; Alacritty
{:des "Terminal control - alphabet"
 :rules [;
         [:!Cleft_arrow :!Ta [:term]]                      ; cmd-left
         [:!Sspacebar :!Tb [:term]]                        ; shift-space
         ; [: :!Tc [:term]]            DEFAULT
         ; [: :!Td [:term]]            DEFAULT
         [:!Cright_arrow :!Te [:term]]                     ; cmd-right
         [:!Sreturn_or_enter :!Tf [:term]]                 ; shift-enter
         [:!WQRcaps_lock :!Tg [:term]]                     ; delete-caps
         [:!WQRtab :!Th [:term]]                           ; delete-tab
         ; [: :!Ti [:term]]            DEFAULT
         [:!WQRright_command :!Tj [:term]]                 ; delete-cmd
         [:!Sright_command :!Tk [:term]]                   ; shift-cmd
         [:!Rleft_option :!Tl [:term]]                     ; shift-alt
         ; [: :!Tm [:term]]            DEFAULT
         [:!WQRright_option :!Tn [:term]]                  ; delete-alt
         [:!Cup_arrow :!To [:term]]                        ; cmd-up
         [:!Cdown_arrow :!Tp [:term]]                      ; cmd-down
         ; [: :!Tq [:term]]            DEFAULT
         [:!WQRleft_control :!Tr [:term]]                  ; delete-ctrl
         [:!WQRleft_option :!Ts [:term]]                   ; delete-alt
         [:!WQRleft_command :!Tt [:term]]                  ; delete-cmd
         [:!Rleft_command :!Tu [:term]]                    ; shift-cmd
         [:!Rleft_control :!Tw [:term]]                    ; shift-ctrl
         [:!TCup_arrow :!Tv [:term]]                       ; ctrl-cmd-up
         [:!TCdown_arrow :!Tx [:term]]                     ; ctrl-cmd-down
         [:!WQRspacebar :!Ty [:term]]                      ; delete-space
         ; [: :!Tz [:term]]            DEFAULT
         ]}

