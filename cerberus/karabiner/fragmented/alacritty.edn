         [:!OCleft_arrow :!Op [:term]]                     ; alt-cmd-left
         [:!OCright_arrow :!Oq [:term]]                    ; alt-cmd-right
         [:!OCright_shift :!Or [:term]]                    ; alt-cmd-shift
         [:!Espacebar :!Os [:term]]                        ; alt-space
         [:!OCdelete_or_backspace :!Ot [:term]]                        ; shift-space
         ; [: :!Ou [:term]]            COLLISION => ACCENT
         [:!OTdelete_or_backspace :!Ov [:term]]                 ; shift-enter
         [:!OTleft_arrow :!Ow [:term]]                     ; space-left
         [:!OTright_arrow :!Ox [:term]]                    ; space-right
         [:!OTdown_arrow :!Oy [:term]]                     ; space-down
         [:!OTup_arrow :!Oz [:term]]                       ; space-up
         ]}

