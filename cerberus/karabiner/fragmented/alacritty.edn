         ; [:delete_or_backspace :!WQright_shift :term {:alone [:!Ol]}]; bspace
         [:!OTspacebar :!Om [:term]] ; alt
         [:!OTkeypad_0 :!Om [:term]] ; alt
         ; [:left_option :left_option :term {:alone [:!Om]}] ; alt
         ; [: :!On [:term]]            COLLISION => ACCENT
         [:!OCspacebar :!Oo [:term]]                       ; alt-cmd-space
