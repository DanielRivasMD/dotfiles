; Alacritty
{:des "Terminal zellij bindings - alphabet"
 :rules [;
         [:left_shift :left_shift :term {:alone [:!Oa]}]   ; shift
         [:!Oleft_arrow :!Ob [:term]]                      ; alt-left
         [:!WQRleft_shift :!Oc [:term]]                    ; delete-shift
         [:!Sright_option :!Od [:term]]                    ; shift-alt
         ; [: :!Oe [:term]]            COLLISION => ACCENT
         [:!Oright_arrow :!Of [:term]]                     ; alt-right
         [:!OTright_shift :!Og [:term]]                    ; tab-shift
         [:!OTright_option :!Oh [:term]]                     ; tab-shift
         ; [: :!Oi [:term]]            COLLISION => ACCENT
         [:!OCreturn_or_enter :!Oj [:term]]                       ; tab-space
