; Alacritty
{:des "Terminal zellij bindings - alphabet"
 :rules [;
         [:!EQRhyphen :!Oa [:term]]                                                                 ; `tab-hyphen` ->      split pane horizontal
         [:!Oleft_arrow :!Ob [:term]]                                                               ; `alt-left`
         [:!WQRleft_shift :!Oc [:term]]                                                             ; `delete-shift`
         ; [: :!Od [:term]]                                                                         ; DOC:                 collision => delete
         ; [: :!Oe [:term]]                                                                         ; DOC:                 collision => accent
         [:!Oright_arrow :!Of [:term]]                                                              ; `alt-right`
         [:!EQRequal_sign :!Og [:term]]                                                             ; `tab-equal` ->       split pane vertical
         [:!EQRleft_arrow :!Oh [:term]]                                                             ; `tab-left` ->        move left pane
         ; [: :!Oi [:term]]                                                                         ; DOC:                 collision => accent
         [:!EQRright_arrow :!Oj [:term]]                                                            ; `tab-right` ->       move right pane
         [:!EQRdown_arrow :!Ok [:term]]                                                             ; `tab-down` ->        move down pane
         [:!EQRup_arrow :!Ol [:term]]                                                               ; `tab-up` ->          move up pane
         [:delete_or_backspace :!WQright_shift :term {:alone [:!Om]}]                               ; `backspace` ->       toggle floating pane
         ; [: :!On [:term]]                                                                         ; DOC:                 collision => accent
         ; [: :!Oo [:term]]                                                                         ; `` ->
         [:!OCleft_arrow :!Op [:term]]                                                              ; `alt-cmd-left` ->    move left tab
         [:!OCright_arrow :!Oq [:term]]                                                             ; `alt-cmd-right` ->   move right tab
         [:!OCspacebar :!Or [:term]]                                                                ; `alt-cmd-space` ->   new tab
         [:escape :!EWright_shift :term {:alone [:!Os]}]                                            ; `esc` ->             locked / normal
         [:!EWRreturn_or_enter :!Ot [:term]]                                                        ; `esc-enter` ->       pane mode
         ; [: :!Ou [:term]]                                                                         ; DOC:                 collision => accent
         [:!EWRdelete_or_backspace :!Ov [:term]]                                                    ; `esc-backspace` ->   tab mode
         [:!EWRspacebar :!Ow [:term]]                                                               ; `esc-space` ->       resize mode
         [:!EWRright_command :!Ox [:term]]                                                          ; `esc-cmd` ->         scroll mode
         [:!EWRright_shift :!Oy [:term]]                                                            ; `esc-shift` ->       search mode
         [:!EWRright_option :!Oz [:term]]                                                           ; `esc-alt` ->         session mode
         ]}

