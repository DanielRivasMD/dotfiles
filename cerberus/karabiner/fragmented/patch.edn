; simple
{:des "Simple modifications"
 :rules [;
         [:keypad_slash :display_brightness_decrement]
         [:keypad_asterisk :display_brightness_increment]
         [:keypad_hyphen :mute]
         [:keypad_plus :volume_increment]
         [:keypad_enter :volume_decrement]]}

