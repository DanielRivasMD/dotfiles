         [:!Fc [:comma :comma :c]]                                                       ; 'ç'
         [:!Fd [:comma :comma :d]]                                                       ; 'Δ'
         [:!Fe [:comma :comma :e]]                                                       ; 'ę'
         [:!Ff [:comma :comma :f]]                                                       ; 'ƒ'
         [:!Fg [:comma :comma :g]]                                                       ; 'ɣ'
         [:!Fh [:comma :comma :h]]                                                       ; 'з'
         [:!Fi [:comma :comma :i]]                                                       ; 'и'
         [:!Fj [:comma :comma :j]]                                                       ; 'ʌ'
         [:!Fk [:comma :comma :k]]                                                       ; 'ϙ'
         [:!Fl [:comma :comma :l]]                                                       ; 'ł'
         [:!Fm [:comma :comma :m]]                                                       ; 'ɱ'
         [:!Fn [:comma :comma :n]]                                                       ; 'ŋ'
