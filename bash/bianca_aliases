
# ==========================
# ===  General aliases	 ===
# ==========================

# General aliases
alias l='ls -Gogh --color'
alias la='ls -AGogh --color'
alias lr='ls -Goghtr --color'
alias lar='ls -AGgohtr --color'

# ==========================

# Wrapper for cd. Updates PROMPT every time 'cd' is called. Compatible with 'cl'
function cd() {
	builtin cd "$@" && set_prompt
}
export cd

# ==========================
