{
    "colorscheme": "simple",
    "diffgutter": true,
    "mkparents": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "rmtrailingws": true,
    "savecursor": true,
    "softwrap": true,
    "statusformatl": "| $(filename) $(modified)($(line),$(col)) $(status.paste) |",
    "statusformatr": "| ft:$(opt:filetype) | $(opt:encoding) |",
    "tabmovement": true,
    "tabsize": 2,
    "tabstospaces": true,
    "xterm": true
}
